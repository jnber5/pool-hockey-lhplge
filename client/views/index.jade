html(lang='en', data-ng-app='lhplge')
    head
        meta(charset='utf-8')
        title LHPLGE
        link(rel='stylesheet', href='/css/app.css')
        link(href="/css/bootstrap-combined.min.css", rel="stylesheet")

    body(data-ng-cloak)
        .navbar.navbar-fixed-top(data-ng-controller="NavCtrl")
            .navbar-inner
                .container
                    a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.brand(href="/")
                    .nav-collapse.collapse
                        ul.nav
                            li(data-access-level='accessLevels.user', active-nav)
                                a(href='/') Accueil
                            li(data-access-level='accessLevels.user', active-nav)
                                a(href='/classement') Classement
                            li.dropdown(data-access-level='accessLevels.admin', active-nav)
                                a.dropdown-toggle(href="#" data-toggle="dropdown") Users
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/user/add") Create User
                                    li
                                        a(href="/users") List Users
                            li.dropdown(data-access-level='accessLevels.admin', active-nav)
                                a.dropdown-toggle(href="#" data-toggle="dropdown") Players
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/players") List Players
                                    li
                                        a(href="/player/add") Create Player
                            li.dropdown(data-access-level='accessLevels.admin', active-nav)
                                a.dropdown-toggle(href="#" data-toggle="dropdown") Contracts
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/contracts") List Contracts
                                    li
                                        a(href="/contract/add") Add Contract
                            li.dropdown(data-access-level='accessLevels.user', active-nav)
                                a.dropdown-toggle(href="#" data-toggle="dropdown") Franchises
                                    b.caret
                                ul.dropdown-menu
                                    li(ng-repeat="franchise in franchises")
                                        a(href="/franchise/{{franchise._id}}") {{franchise.nom}}
                            li(data-access-level='accessLevels.user', active-nav)
                                a(href='/agentsLibres') Agents Libres
                            li(data-access-level='accessLevels.user', active-nav)
                                a(href='/draft') Ordre draft
                            li.dropdown(data-access-level='accessLevels.admin', active-nav)
                                a.dropdown-toggle(href="#" data-toggle="dropdown") Misc
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/team/add") Add Team
                                    li
                                        a(href="/teams") List Teams
                                    li
                                        a(href="/season/add") Add Season
                                    li
                                        a(href="/seasons") List Season
                                    li
                                        a(href="/period/add") Create Period
                                    li
                                        a(href="/periods") List Periods
                                    li
                                        a(href="/domain/add") Add Domain
                                    li
                                        a(href="/domains") List Domains
                            li(data-access-level='accessLevels.anon', active-nav)
                                a(href='/login') Log in
                            li(data-access-level='accessLevels.user')
                                a(href="", data-ng-click="logout()")
                                    | Log out
                        div#userInfo.pull-right(data-access-level='accessLevels.user')
                            strong {{ user.username }}&nbsp;
                            a(href="", data-ng-click="logout()")
                                    | Log out

        .container.main
            div(data-ng-view='ng-view')
            .alert.alert-error(data-ng-bind="error", data-ng-show="error")
        script(src='/js/lib/underscore-min.js')
        script(src='/js/lib/jquery.min.js')
        script(src='/js/lib/angular.min.js')
        script(src='/js/lib/angular-cookies.min.js')
        script(src='/js/lib/bootstrap.min.js')
        script(src='/js/routingConfig.js')
        script(src='/js/app.js')
        script(src='/js/services.js')
        script(src='/js/filters.js')
        script(src='/js/directives.js')
        script(src='/js/lib/angular-locale_fr-ca.js')
        script(src='/js/controllers/home.js')
        script(src='/js/controllers/login.js')
        script(src='/js/controllers/nav.js')
        script(src='/js/controllers/player.js')
        script(src='/js/controllers/contract.js')
        script(src='/js/controllers/private.js')
        script(src='/js/controllers/register.js')
        script(src='/js/controllers/users.js')
        script(src='/js/controllers/franchise.js')
        script(src='/js/controllers/classement.js')